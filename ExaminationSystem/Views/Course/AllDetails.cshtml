@model IEnumerable<ExaminationSystem.Models.Course>
@{
    ViewData["Title"] = "AllDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<style>
    .whity {
        background-color: white;
        border-color: yellow;
        text-align: center;
        color: navy;
    }
    button{
        display:flex;
        justify-content:center;
    }
    button a{
        text-decoration:none;
        color:white;
    }
    button:hover{
        text-decoration:none;
        background-color:forestgreen;
    }
    td{
        text-align:center;
    }
    th{
        text-align:center;
    }
</style>

<center>

    <h1>Course Details</h1>

    <button type="button" class="btn btn-info">
        <a asp-area="" asp-controller="Course" asp-action="NewCourse">Add Course</a>
    </button>
    <button type="button" class="btn btn-info">
        <a asp-area="" asp-controller="Home" asp-action="index">Back to Home</a>
    </button>

    <table class="table" border="5">
        <thead>
            <tr class="thead-dark table-striped">
                <th scope="col">Name</th>
                <th scope="col">Type</th>
                <th scope="col">Duration</th>
                <th scope="col">View</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {

                <tr class="table-light">
                    <td>@i.cName</td>
                    <td>@i.cType</td>
                    <td>@i.cDuration</td>
                    <td>
                        <button type="button" class="btn btn-info">
                            <a asp-controller="Course" asp-action="SingleDetails" asp-route-id="@i.Id">View</a>
                        </button>
                    </td>
                    <td>
                        <button type="button" class="btn btn-info">
                            <a asp-controller="Course" asp-action="Edit" asp-route-id="@i.Id">Edit</a>
                        </button>
                    </td>
                    <td>
                        <button type="button" class="btn btn-info">
                            <a asp-controller="Course" asp-action="Delete" asp-route-id="@i.Id">Delete</a>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</center>

