@model ExaminationSystem.ViewModelCourse.EditCourseViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<form asp-controller="Course" asp-action="Edit" enctype="multipart/form-data" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger">
    </div>

    @*Bind to the properties of the EmployeeEditViewModel. The asp-for tag helper
        takes care of displaying the existing data in the respective input elements*@
    <div class="form-group row">
        <label asp-for="cName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="cName" class="form-control" placeholder="Name">
            <span asp-validation-for="cName" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <label asp-for="cType" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="cType" class="form-control" placeholder="Course_Type">
            <span asp-validation-for="cType" class="text-danger"></span>
        </div>
    </div>




    <div class="form-group row">
        <label asp-for="cDuration" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="cDuration" class="form-control" placeholder="Course Duration">
            <span asp-validation-for="cDuration" class="text-danger"></span>
        </div>
    </div>


    

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="index" asp-controller="home" class="btn btn-primary">Cancel</a>
        </div>
    </div>




</form>