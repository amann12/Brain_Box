@model IEnumerable<ExaminationSystem.Models.Student>
@{
    ViewData["Title"] = "AllDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">

    <style>
        .whity {
            background-color: white;
            border-color: yellow;
            text-align: center;
            color: navy;
        }

        body {
            overflow-x: hidden;
        }

        button {
            display: flex;
            justify-content: center;
        }

            button a {
                text-decoration: none;
                color: white;
            }

            button:hover {
                text-decoration: none;
                background-color: forestgreen;
            }

        td {
            text-align: center;
        }

        th {
            text-align: center;
        }
    </style>

</head>
<body>
    <center>
        <h1>Student Details</h1>
        <button type="button" class="btn btn-info">
            <a asp-area="" asp-controller="Student" asp-action="NewStudent">Add Student</a>
        </button>
        <button type="button" class="btn btn-info">
            <a asp-area="" asp-controller="Home" asp-action="index">Back to Home</a>
        </button>

        <table class="table" border="5">
            <thead>
                <tr class="thead-dark table-striped">
                    <th scope="col">Name</th>
                    <th scope="col">EmailId</th>
                    <th scope="col">DOB</th>
                    <th scope="col">F_Name</th>
                    <th scope="col">M_Name</th>
                    <th scope="col">BG</th>
                    <th scope="col">Gender</th>
                    <th scope="col">Mobile_Number</th>
                    <th scope="col">Address</th>
                    <th scope="col">Roll_Number</th>
                    <th scope="col">View</th>
                    <th scope="col">Edit</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model)
                {
                    <tr class="table-light">
                        <td>@i.sName</td>
                        <td>@i.sEmailId</td>
                        <td>@i.sDOB</td>
                        <td>@i.sFatherName</td>
                        <td>@i.sMotherName</td>
                        <td>@i.sBloodGroup</td>
                        <td>@i.sGender</td>
                        <td>@i.sMobileNumber</td>
                        <td>@i.sAddress</td>
                        <td>@i.sRollNumber</td>
                        <td>
                            <button type="button" class="btn btn-info">
                                <a asp-controller="Student" asp-action="SingleDetails" asp-route-id="@i.Id">View</a>
                            </button>
                        </td>
                        <td>
                            <button type="button" class="btn btn-info">
                                <a asp-controller="Student" asp-action="Edit" asp-route-id="@i.Id"> Edit</a>
                            </button>
                        </td>
                        <td>
                            <button type="button" class="btn btn-info">
                                <a asp-controller="Student" asp-action="Delete" asp-route-id="@i.Id"> Delete</a>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </center>



</body>
</html>
