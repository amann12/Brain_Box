@model IEnumerable<ExaminationSystem.Models.Student>
@{
    ViewData["Title"] = "AllDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    .whity {
        background-color: white;
        border-color: yellow;
        text-align: center;
        color: navy;
    }
    body{
        overflow-x:hidden;
    }
    button {
        display: flex;
        justify-content: center;
    }

        button a {
            text-decoration: none;
            color: white;
        }

        button:hover {
            text-decoration: none;
            background-color: forestgreen;
        }
        td{
            text-align:center;
        }
        th{
            text-align:center;
        }
</style>

<center>
    <h1>Student Details</h1>
    <button type="button" class="btn btn-info">
        <a asp-area="" asp-controller="Student" asp-action="NewStudent">Add Student</a>
    </button>
    <button type="button" class="btn btn-info">
        <a asp-area="" asp-controller="Home" asp-action="index">Back to Home</a>
    </button>
</center>

    <table class="table" border="5">
        <thead>
            <tr class="thead-dark table-striped">
                <th scope="col">Name</th>
                <th scope="col">EmailId</th>
                <th scope="col">DOB</th>
                <th scope="col">F_Name</th>
                <th scope="col">M_Name</th>
                <th scope="col">BG</th>
                <th scope="col">Gender</th>
                <th scope="col">Mobile_Number</th>
                <th scope="col">Address</th>
                <th scope="col">Roll_Number</th>
                <th scope="col">View</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {

                <tr class="table-light">
                    <td>@i.sName</td>
                    <td>@i.sEmailId</td>
                    <td>@i.sDOB</td>
                    <td>@i.sFatherName</td>
                    <td>@i.sMotherName</td>
                    <td>@i.sBloodGroup</td>
                    <td>@i.sGender</td>
                    <td>@i.sMobileNumber</td>
                    <td>@i.sAddress</td>
                    <td>@i.sRollNumber</td>
                    <td>
                        <button type="button" class="btn btn-info">
                            <a asp-controller="Student" asp-action="SingleDetails" asp-route-id="@i.Id">View</a>
                        </button>
                    </td>
                    <td>
                        <button type="button" class="btn btn-info">
                            <a asp-controller="Student" asp-action="Edit" asp-route-id="@i.Id"> Edit</a>
                        </button>
                    </td>
                    <td>
                        <button type="button" class="btn btn-info">
                            <a asp-controller="Student" asp-action="Delete" asp-route-id="@i.Id"> Delete</a>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

