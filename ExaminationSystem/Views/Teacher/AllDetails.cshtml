@model IEnumerable<ExaminationSystem.Models.Teacher>
@{
    ViewData["Title"] = "AllDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    .whity {
        background-color: white;
        border-color: yellow;
        text-align: center;
        color: navy;
    }
    button {
        display: flex;
        justify-content: center;
    }

        button a {
            text-decoration: none;
            color: white;
        }

        button:hover {
            text-decoration: none;
            background-color: forestgreen;
        }
        td{
            text-align:center;
        }
        th{
            text-align:center;
        }
</style>

<center>
    <h1>Teacher Details</h1>
    <button type="button" class="btn btn-info">
        <a asp-area="" asp-controller="Teacher" asp-action="NewTeacher">Add Teacher</a>
    </button>
    <button type="button" class="btn btn-info">
        <a asp-area="" asp-controller="Home" asp-action="index">Back to Home</a>
    </button>

    <table class="table" border="5">
        <thead>
            <tr class="thead-dark table-striped">
                <th scope="col">Name</th>
                <th scope="col">Gender</th>
                <th scope="col">BG</th>
                <th scope="col">Email_Id</th>
                <th scope="col">Mobile_Number</th>
                <th scope="col">Qualification</th>
                <th scope="col">Address</th>
                <th scope="col">View</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {

                <tr class="table-light">
                    <td>@i.tName</td>
                    <td>@i.tGender</td>
                    <td>@i.tBloodGroup</td>
                    <td>@i.tEmailId</td>
                    <td>@i.tMobileNumber</td>
                    <td>@i.tQualification</td>
                    <td>@i.tAddress</td>
                    <td>
                        <button type="button" class="btn btn-info">
                            <a asp-controller="Teacher" asp-action="SingleDetails" asp-route-id="@i.Id">View</a>
                        </button>
                    </td>
                    <td>
                        <button type="button" class="btn btn-info">
                            <a asp-controller="Teacher" asp-action="Edit" asp-route-id="@i.Id">Edit</a>
                        </button>
                    </td>
                    <td>
                        <button type="button" class="btn btn-info">
                            <a asp-controller="Teacher" asp-action="Delete" asp-route-id="@i.Id"> Delete</a>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</center>

